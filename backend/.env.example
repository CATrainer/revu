# Application
APP_NAME=Repruv
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1

BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://www.repruv.co.uk", "https://repruv.co.uk", "https://Repruv-one.vercel.app/"]


# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/Repruv_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
# Note: REDIS_CACHE_URL is computed from REDIS_URL by the app (uses db=2). No need to set.
# REDIS_CACHE_URL=

# Celery (computed)
# The app derives Celery URLs from REDIS_URL by default:
#   Broker -> db=0
#   Result backend -> db=1
# If you need to override for any reason, uncomment and set explicitly:
# CELERY_BROKER_URL=
# CELERY_RESULT_BACKEND=

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500

# Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM_ADDRESS=noreply@Repruv.ai
EMAIL_FROM_NAME=Repruv

# File Storage (S3-compatible)
S3_ENDPOINT_URL=https://your-endpoint.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=Repruv-files
S3_REGION=auto

# External APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# SendGrid Marketing (optional)
SENDGRID_MARKETING_LIST_ID=
# Webhook signature verification (optional Ed25519 public key from Twilio/SendGrid)
SENDGRID_WEBHOOK_PUBLIC_KEY=

# Monitoring
SENTRY_DSN=https://...@sentry.io/...

# Feature Flags
ENABLE_SOCIAL_MONITORING=false
ENABLE_COMPETITOR_TRACKING=true
ENABLE_AI_RESPONSES=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
