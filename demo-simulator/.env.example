# Demo Simulator Service Environment Variables

# API Keys
CLAUDE_API_KEY=sk-ant-api...

# Main App Integration
MAIN_APP_URL=https://api.repruv.com
MAIN_APP_WEBHOOK_SECRET=your-secret-key-here

# Database
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# Redis
REDIS_URL=redis://default:password@host:6379

# Celery (auto-derived from REDIS_URL if not set)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# Demo Configuration
DEMO_MODE_ENABLED=true
MAX_DEMO_PROFILES_PER_USER=1
MAX_INTERACTIONS_PER_DAY=1000

# Content Generation
DEFAULT_COMMENTS_PER_VIDEO=100
DEFAULT_DMS_PER_DAY=20
CONTENT_CACHE_TTL=86400

# Cost Controls
MAX_AI_CALLS_PER_HOUR=500
USE_GENERATION_CACHE=true

# Application
DEBUG=false
DB_ECHO=false
